    .container {
      position: relative;
      z-index: 1; /* Above the particles background */
      text-align: left; /* Center text */
      padding: 100px;
      color: white; /* Ensure readability on dark background */
      box-sizing: border-box;
      width: 90%; /* Set the container's width as a percentage of the parent (80% of screen width) */
      max-width: 1200px; /* Optionally limit the maximum width to something reasonable */
      margin: 0 auto;
    }

    .back-link {
      position: absolute;
      top: 20px;
      right: 20px;
      background: red;
      color: white;
      padding: 10px 20px;
      text-decoration: none;
      border-radius: 5px;
      font-weight: bold;
      z-index: 2; /* Above the particles */
    }

    .back-link:hover {
      background: rgba(0, 0, 0, 0.9);
    }
    /* Container for the scrolling textboxes */
    .scrolling-text-container {
      position: absolute;
      top: 80%; /* Center the container vertically */
      left: 0%;
      width: 100%;
      height: 100px; /* Container height */
      overflow: hidden; /* Hide text when it moves out of bounds */
      display: flex;
      justify-content: flex-start; /* Start from the left */
      align-items: center; /* Center textboxes vertically within the container */
    }

    /* Single textbox style */
